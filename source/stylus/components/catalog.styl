.catalog
  &__title
    margin-bottom: 30px
  &__btn
    display: flex
    margin-bottom: 30px
    overflow: hidden
    & a.active
      background-color: $color-purple
      color: $color-white
  &__tabs
    display: flex
    justify-content: center
    align-items: center
    flex-direction: column


.catalog-btn,
.catalog-btn
  padding: 15px 4px
  background-color: $color-white-grey
  color: $color-black
  font-size: 10px
  text-transform: uppercase
  +above($breakpoints.xxs)
    font-size: 12px
  +above($breakpoints.xs)
    padding: 25px 30px
    font-size: 16px
  +above($breakpoints.sm)
    padding: 27px 35px
    font-size: 18px

.card
  &__list
    display: flex
    justify-content: space-around
    align-items: center
    flex-wrap: wrap
    margin-bottom: 70px
    +above($breakpoints.sm)
      justify-content: space-between
  &__item
    display: flex
    justify-content: center
    align-items: center
    flex-direction: column
    position: relative
    border: 2px solid $color-grey
    margin-bottom: 20px

  &__discount
    position: absolute
    top: 10px
    left: 10px
  &__bottom
    display: flex
    justify-content: center
    align-items: center
    flex-direction: column
    padding-top: 17px
  &__info
    font-size: 18px
    font-weight: bold
    margin-bottom: 5px
    color: $color-black
    +above($breakpoints.xs)
      margin-bottom: 16px
  &__size
    margin-bottom: 17px
  &__circle
    display: flex
    justify-content: center
    margin-bottom: 5px
    +above($breakpoints.xs)
      margin-bottom: 18px
  &__price
    display: flex
    justify-content: center
    font-size: 24px
    margin-bottom: 5px
    +above($breakpoints.xs)
      margin-bottom: 18px
  &__price-ineffective
    color: $color-grey
    margin-right: 22px
  &__price-effective
    color: $color-purple
    font-weight: bold
.size
  text-transform: uppercase
  font-size: 18px
  &__list
    display: flex
    justify-content: space-around
  &__item
    padding: 0 10px
    border-radius: 2px

.circle
  width: 26px
  height: 26px
  border-radius: 100%
  border: 2px solid $color-grey
  &--black
    background-color: $color-black
    margin-right: 12px
  &--red
    background-color: $color-red
.card-img
  display: block
  width: 100%
  height: 100%
.discount
  background-color: $color-purple
  width: 60px
  height: 60px
  border-radius: 100%
  display: flex
  justify-content: center
  align-items: center
  &__description
    color: $color-white
    font-size: 20px
    font-weight: bold
    text-align: center

.active-size
  box-shadow: 0px 0px 0px 1px rgba(180, 1, 78, 1)

.modal-fullscreen.remodal-wrapper
  padding: 0
  overflow: hidden

.modal-fullscreen.remodal
  overflow: auto
  padding: 0
  margin: 0
  max-width: 100%
  width: 100%
  height: 100%
  display: flex
  justify-content: center
  align-items: center
  background-color: RGBA(127,127,127,0.05)

.modal
  display: flex
  background-color: $color-white
  flex-direction: column
  +above($breakpoints.xs)
    flex-direction: row
  &__card
    position: relative
    padding: 5px 10px 0px 10px
    +above($breakpoints.xs)
      padding: 28px 20px 0px 20px
.form
  &__select
    display: block
    font-size: 18px
    text-transform: uppercase
    color: $color-black
    padding: 12px
    width: 100%
    max-width: 100%
    box-sizing: border-box
    margin: 0
    border: 1px solid $color-grey
    -moz-appearance: none
    -webkit-appearance: none
    appearance: none
    background-image: url('../images/arrow.jpg')
    background-repeat: no-repeat, repeat
    background-position: right 10px top 50%, 0 0
    outline: none
    text-align: center
    margin-bottom: 10px
  &__input-name
    margin-bottom: 10px
  &__input-phone
    margin-bottom: 10px
  &__close
    position: absolute
    top: 10px
    right: 10px
    display: flex
    justify-content: center
    align-items: center
    padding: 5px
    border-radius: 100%
    &:active
      top: 11px
      border: 1px solid $color-grey
.modal-img
  display: block
  width: 100%
  height: 100%
.input-name,
.input-phone
  width: 100%
  padding: 12px
  outline: none
  border: 1px solid $color-grey
  text-align: center
  font-size: 18px
  &::placeholder
    color: $color-dark-grey
    font-size: 16px
